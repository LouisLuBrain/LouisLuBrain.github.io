.sidebar.animated.fadeInDown
  .side-content
    .logo-title
      .title
        img(src= url_for('images/profile.jpeg'),style="width:127px;")
        h3(title="")
          a= config.title

    ul.social-links
      //- TODO：将这段代码修改为使用theme配置文件中的信息，而非手动修改
      //- TODO: Modify this code to use the information in the theme configuration file instead of manually modifying it
      
      if theme.phone
        li 
          i.fa.fa-phone
          | #{theme.phone}

      if theme.address
        li
          i.fa.fa-address-card 
          | #{theme.address}

      if theme.github
        li
          a(href=theme.github_link)
            i.fa.fa-github
            | #{theme.github}

      if theme.linkedin
        li
          a(href=theme.linkedin)
            i.fa.fa-linkedin
            | #{theme.linkedin}
            
      if theme.mail
        li
          a(mailto=theme.mail_link)
            i.fa.fa-envelope
            | #{theme.mail}
        
      if theme.QQ
        li
          a
            i.fa.fa-qq
            | #{theme.QQ}
            
  include footer
